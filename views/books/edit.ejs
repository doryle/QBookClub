<%- include("../partials/header") %>
<h1 class="text-center">Edit <%= book.title %> </h1>
<div class="container mx-auto w-50">
    <!-- <div class="row mx-auto"> -->
        <div>
            <form action="/index/<%= book._id %>/?_method=PUT" method="POST">
                    <div class="form-group">           
                         <input class="form-control" type="text" name="book[title]" value="<%= book.title %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="book[author]" value="<%= book.author %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="book[image]" value="<%= book.image %>">
                    </div>
                    <!-- <div class="form-group">
                        <input class="form-control" type="text" name="book[description]" value="<%= book.description %>">
                    </div> -->
                    <div class="form-group">
                        <label for="book-description">Give a summary or review of the book here!</label>
                        <textarea class="form-control" type="text" name="book[description]" id="book-description" rows="6"><%= book.description%></textarea>
                      </div>
                    <div class="form-group">
                        <label for="bookRatingForm">Rating out of 10. (10/10 means you loved it!)</label>
                        <select class="form-control" type="number" name="book[rating]" id="bookRatingForm">
                          <option><%= book.rating%></option>
                          <option>1</option>
                          <option>2</option>
                          <option>3</option>
                          <option>4</option>
                          <option>5</option>
                          <option>6</option>
                          <option>7</option>
                          <option>8</option>
                          <option>9</option>
                          <option>10</option>
                        </select>
                      </div>
                    <div class="form-group text-center">                
                        <button class="btn btn-lg btn-secondary">Submit</button>
                    </div>
                </form>
        </div>
       
    <!-- </div> -->
   
</div>


<%- include("../partials/footer") %>
